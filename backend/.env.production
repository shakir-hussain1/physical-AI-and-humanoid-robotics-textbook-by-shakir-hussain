# OpenAI API
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_EMBED_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini

# Cohere API
COHERE_API_KEY=${COHERE_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Database
DATABASE_URL=${DATABASE_URL}

# Vector Database
QDRANT_URL=${QDRANT_URL}
QDRANT_API_KEY=${QDRANT_API_KEY}
QDRANT_COLLECTION=textbook_embeddings

# FastAPI Configuration
FASTAPI_ENV=production
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Logging
LOG_LEVEL=INFO

# Application Settings
QUERY_MAX_LENGTH=1000
QUERY_MIN_LENGTH=1
CONFIDENCE_THRESHOLD=0.60
RETRIEVAL_TOP_K=5
TIMEOUT_SECONDS=5
MIN_TOKEN_COUNT=256
MAX_TOKEN_COUNT=512

# Models
COHERE_EMBED_MODEL=embed-english-v3.0
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_TEMPERATURE=0.2
RAG_TEMPERATURE=0.7

# JWT Configuration
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
JWT_REFRESH_EXPIRE_DAYS=30

# Feature Flags
ENABLE_CONTEXT_RESTRICTED_MODE=true
ENABLE_FACT_CHECKING_GRADE=true

# Rollback Thresholds
HALLUCINATION_ROLLBACK_THRESHOLD=0.05
ACCURACY_DROP_ALERT_THRESHOLD=0.02
RETRIEVAL_FAILURE_ALERT_THRESHOLD=0.10
LATENCY_P95_ALERT_THRESHOLD_MS=3000
